{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "HIGH-TIER: For systems with 32GB+ RAM, 12+ cores (M3 Max, high-end workstations)",
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999",
    "BASH_DEFAULT_TIMEOUT_MS": "120000",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "0",
    "NODE_OPTIONS": "--max-old-space-size=16384",
    "UV_THREADPOOL_SIZE": "12"
  },
  "permissions": {
    "defaultMode": "bypassPermissions"
  },
  "recommended_profile": "full",
  "notes": [
    "Use full profile: myconvergio install --full (57 agents)",
    "Can handle complete agent ecosystem",
    "Lean variants optional but can improve responsiveness"
  ]
}
