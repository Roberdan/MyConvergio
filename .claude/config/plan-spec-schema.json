{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MyConvergio Plan Spec",
  "description": "JSON Schema for plan spec.json validation. Source: HVE Core pattern (schema-driven validation).",
  "type": "object",
  "required": ["user_request", "requirements", "waves"],
  "properties": {
    "user_request": {
      "type": "string",
      "minLength": 1,
      "description": "Verbatim user request text"
    },
    "requirements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "text", "wave"],
        "properties": {
          "id": { "type": "string", "pattern": "^F-\\d{2,3}$" },
          "text": { "type": "string", "minLength": 1 },
          "wave": { "type": "string", "pattern": "^W[0-9F]" }
        },
        "additionalProperties": false
      }
    },
    "waves": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "tasks"],
        "properties": {
          "id": { "type": "string", "pattern": "^W[0-9F]" },
          "name": { "type": "string", "minLength": 1 },
          "estimated_hours": { "type": "number", "minimum": 0 },
          "precondition": { "type": "object" },
          "tasks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "id",
                "do",
                "files",
                "verify",
                "ref",
                "priority",
                "type",
                "model",
                "effort"
              ],
              "properties": {
                "id": { "type": "string", "pattern": "^T[0-9F]-\\d{2}$" },
                "do": { "type": "string", "minLength": 1 },
                "files": { "type": "array", "items": { "type": "string" } },
                "verify": {
                  "type": "array",
                  "items": { "type": "string" },
                  "minItems": 1
                },
                "ref": { "type": "string", "minLength": 1 },
                "priority": {
                  "type": "string",
                  "enum": ["P0", "P1", "P2", "P3"]
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "feature",
                    "fix",
                    "refactor",
                    "test",
                    "config",
                    "documentation",
                    "chore"
                  ]
                },
                "model": { "type": "string" },
                "effort": { "type": "integer", "minimum": 1, "maximum": 3 },
                "executor_agent": {
                  "type": "string",
                  "enum": ["copilot", "claude"]
                },
                "skip_if": { "type": "string" },
                "output_match": { "type": "object" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
