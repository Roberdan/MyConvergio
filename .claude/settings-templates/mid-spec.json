{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "Mid-spec settings for machines with 16GB RAM, 8 cores",
  "_recommended_for": "Intel Core i7, Apple M1 Pro/M2, 16GB RAM",
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "BASH_DEFAULT_TIMEOUT_MS": "45000",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "NODE_OPTIONS": "--max-old-space-size=8192",
    "UV_THREADPOOL_SIZE": "8"
  },
  "permissions": {
    "allow": [],
    "deny": [],
    "defaultMode": "askEveryTime"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/worktree-guard.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/prefer-ci-summary.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/warn-bash-antipatterns.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/enforce-line-limit.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-format.sh",
            "timeout": 10000
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/inject-agent-context.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/preserve-context.sh",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
