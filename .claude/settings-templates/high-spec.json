{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "High-spec settings for machines with 32GB+ RAM, 10+ cores",
  "_recommended_for": "Apple M3 Max/Ultra, Intel Core i9, AMD Ryzen 9, 32GB+ RAM",
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999",
    "BASH_DEFAULT_TIMEOUT_MS": "60000",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "NODE_OPTIONS": "--max-old-space-size=16384",
    "UV_THREADPOOL_SIZE": "12"
  },
  "permissions": {
    "allow": [],
    "deny": [],
    "defaultMode": "bypassPermissions"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/worktree-guard.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/prefer-ci-summary.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/warn-bash-antipatterns.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/enforce-line-limit.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-format.sh",
            "timeout": 10000
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/inject-agent-context.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/preserve-context.sh",
            "timeout": 10000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-end-tokens.sh",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
