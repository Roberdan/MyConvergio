{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "Low-spec settings for machines with 8GB RAM, 4 cores",
  "_recommended_for": "Intel Core i5, Apple M1, 8GB RAM laptops",
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "32000",
    "BASH_DEFAULT_TIMEOUT_MS": "30000",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "UV_THREADPOOL_SIZE": "4"
  },
  "permissions": {
    "allow": [],
    "deny": [],
    "defaultMode": "askEveryTime"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/worktree-guard.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/prefer-ci-summary.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/enforce-line-limit.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
